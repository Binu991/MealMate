<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".QuestionPage3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Back"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTitleQ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which meals do you want to plan? Select all that apply."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <CheckBox
            android:id="@+id/cbBreakfast"
            style="@style/ReasonCheckBoxStyle"
            android:text="Breakfast" />

        <CheckBox
            android:id="@+id/cbLunch"
            style="@style/ReasonCheckBoxStyle"
            android:text="Lunch" />

        <CheckBox
            android:id="@+id/cbDinner"
            style="@style/ReasonCheckBoxStyle"
            android:text="Dinner" />

        <CheckBox
            android:id="@+id/cbSnacks"
            style="@style/ReasonCheckBoxStyle"
            android:text="Snacks" />

        <Button
            android:id="@+id/btnContinue6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
