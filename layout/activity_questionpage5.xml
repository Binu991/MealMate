<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".QuestionPage5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Back"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTitleQ5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For how many people do you cook?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <CheckBox
            android:id="@+id/cbOne"
            style="@style/ReasonCheckBoxStyle"
            android:text="1" />

        <CheckBox
            android:id="@+id/cbTwo"
            style="@style/ReasonCheckBoxStyle"
            android:text="2" />

        <CheckBox
            android:id="@+id/cbThree"
            style="@style/ReasonCheckBoxStyle"
            android:text="3" />

        <CheckBox
            android:id="@+id/cbFour"
            style="@style/ReasonCheckBoxStyle"
            android:text="4" />

        <CheckBox
            android:id="@+id/cbFive"
            style="@style/ReasonCheckBoxStyle"
            android:text="5" />

        <CheckBox
            android:id="@+id/cbMoreThanFive"
            style="@style/ReasonCheckBoxStyle"
            android:text="More than 5" />

        <Button
            android:id="@+id/btnContinue8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
