<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".QuestionPage7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bttnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Back"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTitleQ7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How long are you willing to commit?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <CheckBox
            android:id="@+id/cbYear"
            style="@style/ReasonCheckBoxStyle"
            android:text="At least a year" />

        <CheckBox
            android:id="@+id/cbThreeMonths"
            style="@style/ReasonCheckBoxStyle"
            android:text="At least 3 months" />

        <CheckBox
            android:id="@+id/cbMonth"
            style="@style/ReasonCheckBoxStyle"
            android:text="At least a month" />

        <Button
            android:id="@+id/bttnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
