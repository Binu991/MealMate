<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".QuestionPage2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Back"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tvTitleQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your lifestyle?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- CheckBoxes (using your custom style) -->
        <CheckBox
            android:id="@+id/cbOmnivore"
            style="@style/ReasonCheckBoxStyle"
            android:text="Omnivore" />

        <CheckBox
            android:id="@+id/cbPescoPollo"
            style="@style/ReasonCheckBoxStyle"
            android:text="Pesco-pollo" />

        <CheckBox
            android:id="@+id/cbPescetarian"
            style="@style/ReasonCheckBoxStyle"
            android:text="Pescetarian" />

        <CheckBox
            android:id="@+id/cbVegetarian"
            style="@style/ReasonCheckBoxStyle"
            android:text="Vegetarian" />

        <CheckBox
            android:id="@+id/cbVegan"
            style="@style/ReasonCheckBoxStyle"
            android:text="Vegan" />


        <Button
            android:id="@+id/btnContinue5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
